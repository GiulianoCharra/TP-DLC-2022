<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" prefHeight="329.0" prefWidth="484.0" spacing="20.0" xmlns="http://javafx.com/javafx/15.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.utn.dlc.BuscadorController">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <center>
                <VBox fx:id="hb_resultados" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER_RIGHT">

                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </VBox>
            </center>
            <top>
                <VBox alignment="CENTER" prefHeight="56.0" prefWidth="444.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label prefHeight="50.0" prefWidth="98.0" text="Buscador">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Separator prefHeight="16.0" prefWidth="444.0">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="10.0" top="10.0"/>
                            </padding>
                        </Separator>
                        <HBox fx:id="hb_buscador" alignment="CENTER" fillHeight="false"
                              maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="67.0"
                              prefWidth="444.0" VBox.vgrow="ALWAYS">
                            <children>
                                <TextField fx:id="txt_texto_ingresado" onAction="#buscarEnter" prefHeight="25.0"
                                           prefWidth="357.0" promptText="Ingrese"/>
                                <Separator orientation="VERTICAL" prefHeight="26.0" prefWidth="25.0"/>
                                <ImageView fx:id="img_buscar" fitHeight="25.0" fitWidth="25.0"
                                           onMouseClicked="#buscarClick" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@imagenes/search.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                        <Label fx:id="lbl_cant_resultados" prefHeight="17.0" prefWidth="373.0" text="Resultados: "
                               textFill="#a8a5a5">
                            <padding>
                                <Insets top="5.0"/>
                            </padding>
                        </Label>
                    </children>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </VBox>
            </top>
        </BorderPane>
        <Label text="Primary View"/>
        <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
